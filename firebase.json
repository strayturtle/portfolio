{
  "hosting": {
    "public": "public",
    "ignore": [ "firebase.json", "**/.*", "**/node_modules/**", "**/Thumbs.db" ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|webp|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}
